<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:orientation="vertical"
    android:paddingLeft="7dp"
    android:paddingRight="7dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:background="@android:color/white"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="9dp"
        android:paddingRight="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/itemContainer2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/textAddr2"
                android:layout_width="96dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:gravity="left|center_horizontal|center"
                android:text="   문경새재 3관문(조령관)" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/setting" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.07"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/x" />

        </LinearLayout>

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/imagePhoto2"
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/camera" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemContainer3"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/proImage"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/usericon" />

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textNickName2"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="0.44"
                    android:gravity="left|center_vertical|center_horizontal|center"
                    android:text="Chcunaki(오동헌)"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textDate2"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="0.03"
                    android:gravity="left|center_vertical"
                    android:text="   2017-10-28"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9dp"
                android:layout_weight="1"
                android:background="@null"
                app:srcCompat="@mipmap/rt" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#23c323</item>
        <item name="colorPrimaryDark">#13c313</item>
        <!--<item name="colorAccent"></item>-->
        <item name="android:screenOrientation">portrait</item>
        <item name="android:configChanges">orientation|screenSize</item>
        <item name="android:launchMode">singleTop</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:configChanges">orientation|screenSize</item>
        <item name="android:launchMode">singleTop</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent_activity_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:configChanges">orientation|screenSize</item>
        <item name="android:launchMode">singleTop</item>
    </style>

    <style name="AppTheme.BasicTheme">
    </style>
</resources>
